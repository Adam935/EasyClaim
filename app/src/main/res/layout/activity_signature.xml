<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textColor="@color/black"/>

    <com.example.easyclaim.util.FixedSignaturePad
        android:id="@+id/signaturePad"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@+id/buttonClear"
        android:layout_below="@id/textViewMessage"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        app:penColor="@android:color/black" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonValidate"
        android:layout_alignParentStart="true"
        android:text="Effacer"
        android:background="@drawable/button_connection_background"
        android:textColor="@color/blue_button_text"
        android:layout_marginLeft="20dp"
        />

    <Button
        android:id="@+id/buttonValidate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="Valider la signature"
        android:background="@drawable/button_configure_background"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"/>

</RelativeLayout>