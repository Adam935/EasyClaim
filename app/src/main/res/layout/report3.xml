<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/background_gradient">

    <TextView
        android:id="@+id/textViewTest"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INFORMATIONS RELATIVES AU TIERS"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/editNomAssurance"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTest"
        android:hint="Nom de l'assurance"/>

    <EditText
        android:id="@+id/editNumeroContrat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editNomAssurance"
        android:hint="Numéro de d'assurance"/>

    <EditText
        android:id="@+id/editImmatriculation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editNumeroContrat"
        android:hint="Immatriculation"/>

    <EditText
        android:id="@+id/editMailAssureur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editImmatriculation"
        android:hint="Adresse Mail de l'assureur"/>

    <EditText
        android:id="@+id/editMailProprietaire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editMailAssureur"
        android:hint="Adresse Mail du propriétaire de la voiture"/>

    <Button
        android:id="@+id/buttonContinuer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editMailProprietaire"
        android:text="Continuer le report"
        android:background="@drawable/button_configure_background"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"/>
</RelativeLayout>
