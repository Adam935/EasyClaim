<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/background_gradient">

    <com.github.barteksc.pdfviewer.PDFView
        android:id="@+id/pdfView"
        android:layout_width="match_parent"
        android:layout_height="559dp" />

    <Button
        android:id="@+id/buttonSignatureA"
        android:layout_width="170dp"
        android:layout_height="75dp"
        android:layout_below="@id/pdfView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_configure_background"
        android:text="Signature Driver A"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/buttonSignatureB"
        android:layout_width="170dp"
        android:layout_height="75dp"
        android:layout_below="@id/pdfView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_yellow"
        android:text="Signature Driver B"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/buttonValidate"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_below="@id/buttonSignatureB"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="22dp"
        android:text="Validate the report!"
        android:background="@drawable/button_connection_background"
        android:textColor="@color/blue_button_text"/>

</RelativeLayout>